<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dealerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="108dp"
        android:text="Dealer score: 10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/dealerHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealerScore">

        <ImageView
            android:id="@+id/dealer_card_1"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/c2" />

        <ImageView
            android:id="@+id/dealer_card_2"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/c2" />

        <ImageView
            android:id="@+id/dealer_card_3"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/c2" />

        <ImageView
            android:id="@+id/dealer_card_4"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/c2" />

    </LinearLayout>

    <TextView
        android:id="@+id/playerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:text="Player score: 10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealerHand" />

    <LinearLayout
        android:id="@+id/playerHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerScore">

        <ImageView
            android:id="@+id/player_card_1"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/c3" />

        <ImageView
            android:id="@+id/player_card_2"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/c3" />

        <ImageView
            android:id="@+id/player_card_3"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/c3" />

        <ImageView
            android:id="@+id/player_card_4"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:srcCompat="@drawable/c3" />

    </LinearLayout>

    <Button
        android:id="@+id/hitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="48dp"
        android:text="@string/app_hit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerHand" />

    <Button
        android:id="@+id/standButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="@string/app_stand_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hitButton"
        app:layout_constraintTop_toBottomOf="@+id/playerHand" />
</androidx.constraintlayout.widget.ConstraintLayout>